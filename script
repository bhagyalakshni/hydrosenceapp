// Dummy data simulating real-time sensor
function simulateSensor() {
  const level = Math.floor(Math.random() * 101); // Water level from 0 to 100
  document.getElementById("waterLevel").textContent = level + "%";

  if (level < 25) {
    document.getElementById("tankStatus").textContent = "âš ï¸ Low Water";
  } else if (level < 75) {
    document.getElementById("tankStatus").textContent = "âœ… Normal";
  } else {
    document.getElementById("tankStatus").textContent = "ðŸŸ¢ Full";
  }
}

// Update every 5 seconds
simulateSensor();
setInterval(simulateSensor, 5000);
