const waterLevelEl = document.getElementById("waterLevel");
const tankStatusEl = document.getElementById("tankStatus");
const waterEl = document.getElementById("water");

let chartData = [];
let chartLabels = [];

const ctx = document.getElementById('waterChart').getContext('2d');
const chart = new Chart(ctx, {
  type: 'line',
  data: {
    labels: chartLabels,
    datasets: [{
      label: 'Water Level (%)',
      data: chartData,
      fill: true,
      borderColor: '#0077cc',
      backgroundColor: 'rgba(0, 119, 204, 0.2)',
      tension: 0.3,
      pointRadius: 3
    }]
  },
  options: {
    responsive: true,
    animation: false,
    scales: {
      y: {
        beginAtZero: true,
        max: 100,
        ticks: {
          stepSize: 20
        }
      }
    }
  }
});

function simulateSensor() {
  const level = Math.floor(Math.random() * 101); // 0â€“100%
  const now = new Date().toLocaleTimeString();

  // Update graph
  if (chartLabels.length >= 10) {
    chartLabels.shift();
    chartData.shift();
  }
  chartLabels.push(now);
  chartData.push(level);
  chart.update();

  // Update tank UI
  waterLevelEl.textContent = `${level}%`;
  waterEl.style.height = `${level}%`;

  if (level < 25) {
    tankStatusEl.textContent = "âš ï¸ Low Water";
    waterEl.style.backgroundColor = "#ff5722";
  } else if (level < 75) {
    tankStatusEl.textContent = "âœ… Normal";
    waterEl.style.backgroundColor = "#00bcd4";
  } else {
    tankStatusEl.textContent = "ðŸŸ¢ Full";
    waterEl.style.backgroundColor = "#4caf50";
  }
}

// Start simulation
simulateSensor();
setInterval(simulateSensor, 5000);


    

